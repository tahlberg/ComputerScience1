#include <iostream>
#include <fstream>

using namespace std;

void PlayTicTacToe();
void TakeQuiz();

int main()
{
    TakeQuiz();
    PlayTicTacToe();
    return 0;
}

void TakeQuiz()
{
    string fName;
    cout << "What is the name of the file?" << endl;
    cin >> fName;
    ifstream fin;
    fin.open(fName.c_str());
    if (fin.fail() == true)
    {
        cout << "Failed to open file." << endl;
    }
    else
    {
        string text;
        int numCorr;
        string uAnswer;
        int n = 1;
        do
        {
            for(int i = 0; i < n; i++)
            {
                getline(fin, text);
            }
            cout << text << endl;
            cin.ignore(32768, '\n');
            getline(fin, text);
            getline(cin, uAnswer);
            if(uAnswer == text)
            {
                cout << "Correct!" << endl;
                numCorr++;
            }
            else
            {
                cout << "Incorrect!" << endl;
            }
            n++;
        }
        while(fin.eof() == false);
        fin.close();
    }
}

void PlayTicTacToe()
{
    const int SIZE = 3;
    char squares[SIZE][SIZE] =
        {
            {' ', ' ', ' '},
            {' ', ' ', ' '},
            {' ', ' ', ' '}
        };
    int inRow;
    int inCol;
    char whoseTurn = 'X';
    for(int numTurns = 0; numTurns < 9; numTurns++)
    {
        cout << "===Player " << whoseTurn << "===" << endl;
        cout << endl;
        for(int i =0; i < SIZE; i++)
        {
            for(int n = 0; n < SIZE; n++)
            {
                cout << squares[i][n];
            }
            cout << endl;
        }
        cout << endl;
        cout << "What row?" << endl;
        cin >> inRow;
        while(inRow > 3 || inRow < 1)
        {
            cout << "That is not on the board" << endl;
            cin >> inRow;
        }
        cout << "What column" << endl;
        cin >> inCol;
        while(inCol > 3 || inRow < 1)
        {
            cout << "That is not on the board" << endl;
            cin >> inRow;
        }
        inRow--;
        inCol--;
        while(squares[inRow][inCol] == 'X' || squares[inRow][inCol] == 'O')
        {
            cout << "That space is already taken!" << endl;
            cout << "What row?" << endl;
            cin >> inRow;
            while(inRow > 3 || inRow < 1)
            {
                cout << "Not a valid Row" << endl;
                cin >> inRow;
            }
            cout << "What column" << endl;
            cin >> inCol;
            while(inCol > 3 || inRow < 1)
            {
                cout << "Not a valid column" << endl;
                cin >> inRow;
            }
        }
        squares[inRow][inCol] = whoseTurn;
        if(whoseTurn == 'X')
        {
            whoseTurn = 'O';
        }
        else
        {
            whoseTurn = 'X';
        }
    }
    cout << "===Game Over===" << endl;
    for(int i = 0; i < SIZE; i++)
    {
        for(int n = 0; n < SIZE; n++)
        {
            cout << squares[i][n];
        }
        cout << endl;
    }
}
