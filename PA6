void RollDice(int rollTimes)
{
    int rollTotal;
    rand(time(0));
    for(int i = 0; i < rollTimes; i++)
    {
        int roll = rand()%20+1;
        cout << roll << endl;
        rollTotal += roll;
    }
    cout << rollTotal << endl;
}
